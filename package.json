{
    "name": "crypto-spot-wallet",
    "version": "0.0.1",
    "main": "./dist/src/server.js",
    "author": "Steadfast",
    "license": "MIT",
    "scripts": {
        "typegen": "ts-node src/typegen/build.ts",
        "typegen:watch": "ts-node src/typegen/watch.ts",
        "lint:fix": "tsc --noEmit && eslint \"**/*.{js,ts,d.ts}\" --quiet --fix",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts,d.ts}\" --quiet",
        "dev": "yarn typegen && nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
        "debug": "ts-node -r tsconfig-paths/register --inspect --debug-brk src/server.ts",
        "build": "yarn typegen && rimraf dist && tsc -p ./tsconfig.json && copyfiles ./src/**/*.graphql ./dist/",
        "start": "yarn build && node dist/src/server.js",
        "test": "yarn typegen && jest --detectOpenHandles --forceExit --config --no-cache",
        "start:ts": "ts-node src/server.ts",
        "start:backend": "yarn build && BCLUSTER_ENV=backend node dist/src/server.js",
        "pre-commit": "lint-staged",
        "prepare": "rimraf .husky && husky install && npx husky add .husky/pre-commit \"yarn pre-commit\""
    },
    "dependencies": {
        "@sentry/node": "^6.6.0",
        "@sfast/gql-schema-mongoose": "^0.0.15",
        "@sfast/gql-schema-parser": "^0.0.15",
        "apollo-errors": "^1.9.0",
        "apollo-server": "^2.9.7",
        "apollo-server-core": "^2.9.7",
        "apollo-server-express": "^2.9.7",
        "authy": "^1.4.0",
        "bcrypt": "^3.0.6",
        "coinbase": "^2.0.8",
        "coinbase-pro-node": "^3.0.5",
        "copyfiles": "^2.4.1",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "graphql-log": "^0.1.3",
        "graphql-request": "^1.8.2",
        "graphql-subscriptions": "^1.1.0",
        "graphql-tag": "^2.10.1",
        "graphql-toolkit": "^0.6.7",
        "graphql-upload": "^8.1.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "md5": "^2.2.1",
        "module-alias": "^2.2.2",
        "moment": "^2.29.1",
        "multicoin-address-validator": "^0.5.1",
        "nanoid": "^3.0.0",
        "node-cache": "^5.1.2",
        "node-schedule": "^1.3.2",
        "reflect-metadata": "^0.1.13",
        "request-promise": "^4.2.5",
        "twilio": "^3.49.0",
        "typedi": "^0.10.0",
        "uuid": "^3.3.3",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@ardatan/graphql-tools": "^4.1.0",
        "@graphql-codegen/cli": "1.9.1",
        "@graphql-codegen/typescript": "^1.9.1",
        "@graphql-codegen/typescript-operations": "^1.9.1",
        "@graphql-codegen/typescript-resolvers": "^1.9.1",
        "@graphql-modules/core": "^0.7.13",
        "@graphql-modules/di": "^0.7.13",
        "@graphql-modules/utils": "^0.4.0",
        "@graphql-tools/load-files": "^6.3.2",
        "@graphql-tools/merge": "^6.2.13",
        "@types/bcrypt": "^5.0.0",
        "@types/coinbase": "^2.0.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "4.17.7",
        "@types/graphql": "^14.5.0",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.144",
        "@types/md5": "^2.1.33",
        "@types/mongoose": "^5.10.5",
        "@types/node": "^12.12.6",
        "@types/node-schedule": "^1.3.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "glob-watcher": "^5.0.3",
        "graphql-codegen": "^0.4.0",
        "husky": "^6.0.0",
        "jest": "24.9.0",
        "json-to-pretty-yaml": "^1.2.2",
        "lint-staged": "^11.0.0",
        "listr": "^0.14.3",
        "listr-update-renderer": "^0.5.0",
        "mongodb-memory-server": "^6.3.2",
        "nodemon": "^1.19.4",
        "ts-graphql-plugin": "^1.3.0",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.5.2",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.1",
        "tslint-eslint-rules": "^5.4.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-external-module-name": "^2.1.0",
        "typescript": "^3.7.2"
    },
    "_moduleAliases": {
        "@spot_wallet/core": "dist/src/modules/core",
        "@spot_wallet/app": "dist/src/modules/app",
        "@spot_wallet/backend": "dist/src/modules/backend",
        "@spot_wallet/account": "dist/src/modules/account",
        "@spot_wallet/types": "dist/src/modules/core/types",
        "@spot_wallet/utils": "dist/src/utils",
        "@customTypes" : "dist/src/@types/"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "lint-staged": {
        "*.{js,ts}": [
            "yarn lint:fix",
            "git add"
        ]
    }
}
