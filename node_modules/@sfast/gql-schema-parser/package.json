{
	"name": "@sfast/gql-schema-parser",
	"version": "0.0.15",
	"description": "The core parsing and utility functionality for grapqhql AST parsing and more",
	"keywords": [
		"grapqhl",
		"schema",
		"grapqhl",
		"mongoose",
		"mongoose",
		"mongo",
		"sdl",
		"schema"
	],
	"author": "Steadfast",
	"homepage": "http://grapqhl-compose-schema.steadfast.tech",
	"license": "MIT",
	"main": "./dist/src/index.js",
	"module": "./dist/src/index.js",
	"types": "./dist/src/index.d.ts",
	"scripts": {
		"clean": "rm -rf ./dist",
		"prebuild": "yarn clean",
		"build": "yarn tsc && yarn copy-files",
		"tsc": "tsc -p ./tsconfig.json",
		"compile": "tsc -p .",
		"copy-files": "copyfiles -u 1 src/**/*.graphql dist/src",
		"tslint": "./node_modules/.bin/tslint --project ./tsconfig.json",
		"tslint:fix": "./node_modules/.bin/tslint --project ./tsconfig.json --fix",
		"tslint:check": "tslint-config-prettier-check ./tslint.json",
		"prettier": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
		"doc": "typedoc  --options ./typedoc.json",
		"pre-commit": "yarn tslint:fix && yarn prettier && yarn test && yarn build",
		"test": "jest --detectOpenHandles --forceExit",
		"snyktest": "snyk test",
		"snyk-protect": "snyk protect"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn pre-commit"
		}
	},
	"dependencies": {
		"debug": "^4.1.1",
		"graphql": "^14.5.8",
		"graphql-import": "^0.7.1",
		"graphql-import-node": "^0.0.4",
		"graphql-tag": "^2.10.1",
		"graphql-tools": "^4.0.6",
		"lodash": "^4.17.15",
		"md5": "^2.2.1"
	},
	"devDependencies": {
		"@types/graphql": "^14.5.0",
		"@types/jest": "^24.0.23",
		"@types/lodash": "^4.14.149",
		"@types/md5": "^2.1.33",
		"@types/node": "^12.12.14",
		"copyfiles": "^2.1.1",
		"husky": "^4.0.0-beta.1",
		"jest": "^24.9.0",
		"mongodb-memory-server": "^6.2.0",
		"prettier": "^1.19.1",
		"snyk": "^1.254.0",
		"ts-jest": "^24.2.0",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"typedoc": "^0.15.3",
		"typedoc-plugin-external-module-name": "^2.1.0",
		"typescript": "^3.7.2"
	},
	"snyk": true,
	"publishConfig": {
		"access": "restricted"
	},
	"gitHead": "794cb7a90ad182a13ed095a995195601a3181917"
}
